<% layout("layouts/boilerplate") %>
<script>
    const mapToken = "<%= process.env.MAP_TOKEN %>";
    const listing = <%- JSON.stringify(listing) %>;
</script>

<div class="row mt-3 mb-3 card-container p-1">
    <div class="card listing-card">
        <div class="row">
            <p class="card-text">listed By : <i><%= listing.owner.username%></i></p>
            <div class="col-5 ">
                <img src="<%= listing.image.url %>" class="img-fluid rounded-start show-img" alt="listing_image">
            </div>
            <div class="card-body col-5 ">
                <h3><%= listing.title %></h3>
                <p class="card-text"><%= listing.description %> </p>
                <p class="card-text">Price: &#8377; <%= listing.price.toLocaleString("en-IN") %></p>
                <p class="card-text">Country : <%= listing.country%></p>
                <p class="card-text">Location : <%= listing.location%><br/></p>
                <p class="card-text">Category :<%= listing.category%><br/></p> 
                <div class="p-0 m-0 mt-1">
                    <button type="submit" class="btn btn-primary">Book Now!</button>
                </div>              
            </div>
            <!-- <% if(curUser && curUser._id.equals(listing.owner._id)){ %>  -->
            <div class="col-2 d-flex justify-content-end align-items-start gap-2">
                <a href="/listings/<%=listing._id%>/edit" class="btn btn-sm btn-dark"> Edit </a>

                <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" >
                    <button class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </div>
            <!-- <% }  %> -->

        </div>
    </div>
</div>


<div class="row mt-3 mb-3 review-container p-2">
    <% if(curUser && curUser._id){ %> 
    <h4>Leave Your Comment</h4>
    <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-slot">
        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div> 

        <div class="mb-3">
             <label for="comment" class="form-label">Comment</label>
             <textarea 
             name="review[comment]" 
             id="comment" 
             rows="5"
             cols="30"
             class="form-control"
             required
             ></textarea>
             <div class="invalid-feedback">Please enter valid comment</div>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
    </form>
    <% }  %>
</div>

<div class="row review-container p-2"> 
    <p><b>All Reviews</b></p>
    <% if(listing.reviews.length == 0){ %>
        <p>No Reviews Yet !</p>
    <% } %> 
    <% for(let review of listing.reviews) { %>
    <div class="card col-5 ms-3 mb-3">
        <div class="card-body">
            <h5 class="card-title"><%= review.author.username%></h5>
            <!-- for star used LunarLogic/starability slot-machine ratings -->
            <p class="starability-result cart-text" data-rating="<%= review.rating %>"></p>
            <p class="cart-text"><%= review.comment %></p>
        </div>
        <form 
        class="mb-3" 
        method="POST"
        action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
        >
            <% if(curUser && curUser._id.equals(review.author._id)){ %> 
                <button class="btn btn-dark">Delete</button>                   
            <% } %>
        </form>
    </div>
    <% } %>  
</div>

<div class="row p-2 mb-4">
    <h3>Where You will be</h3>
    <div id="map"></div>
</div>
<script src="/js/map.js"></script>  