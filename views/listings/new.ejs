<% layout("layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
    <!-- col-8 uses 8 columns out of 12, 
     and offset-2 pushes it 2 columns from the left to center the block .
    -->
    <br>
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings"  class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input  
               name="listing[title]" 
               type="text" 
               placeholder="Add a catchy title" 
               class="form-control"
               id="title"
               required
            >
            <div class="valid-feedback"> Title Looks good! </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" type="text" placeholder="Enter description"  class="form-control" id="description" required></textarea>
            <div class="invalid-feedback"> Please add short description </div>
        </div>

        <div class="mb-3">

            <label for="category" class="form-label">Category </label>
            <select name="listing[category]" id="category" class="form-select" required>
                <option value="Rooms" >Rooms</option>
                <option value="Iconic Cities">Iconic Cities</option>
                <option value="Mountains">Mountains</option>
                <option value="Castles">Castles</option>
                <option value="Amazing Pools">Amazing Pools</option>
                <option value="Camping">Camping</option>
                <option value="Farms">Farms</option>
                <option value="Arctic">Arctic</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input  
               name="listing[image]"
               type="file" 
               class="form-control"
               id="image"
               required
            >
            <!-- <div class="invalid-feedback"> Image URL should be valid </div> -->
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input  
                name="listing[price]"
                type="text" 
                placeholder="Ex : 1200" 
                class="form-control"
                id="price"
                required
                >
                <div class="invalid-feedback"> Price should be valid. </div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input  
                name="listing[country]"
                type="text" 
                placeholder="Ex: India" 
                class="form-control"
                id="country"
                required
                >
                <div class="invalid-feedback"> Country should be valid. </div>
            </div> 
        </div>   
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input  
               name="listing[location]"
               type="text" 
               placeholder="Ex: Kolhapur,Maharashtra." 
               class="form-control"
               id="location"
               required
            >
            <div class="invalid-feedback"> Location should be valid. </div>
        </div> 
        <br>
        <button class="add-btn btn">Add</button>
    </form>
    <br><br>
    </div>
</div>